<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihLogin"
    android:orientation="vertical"
    android:background="#E6E6E6"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/btnLoginAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:text="Login Admin"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="50dp"
        android:drawableTop="@drawable/ic_admin"/>

    <Button
        android:id="@+id/btnLoginAlumni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:text="Login Alumni"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:drawableTop="@drawable/student"/>

</LinearLayout>