<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihLogin"
    android:gravity="center_vertical"
    android:background="@color/default_icon_color">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/admin"
            app:lottie_autoPlay="true"
            android:layout_gravity="center_horizontal"
            app:lottie_loop="true"/>

        <Button
            android:id="@+id/btnLoginAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:text="Login Admin"
            android:textSize="20dp"
            android:layout_marginTop="-25dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTop"
        android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/student2"
        app:lottie_autoPlay="true"
        android:outlineAmbientShadowColor="@color/main"
        android:layout_gravity="center_horizontal"
        app:lottie_loop="true"/>

    <Button
        android:id="@+id/btnLoginAlumni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:text="Login Alumni"
        android:layout_marginTop="-20dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    </LinearLayout>





</RelativeLayout>